# Sample Makefile
# by Nakata Maho
# whether _FLOAT128 libs is requred or not is heavily dependent on your environment.

CXX=c++
MPLAPACKDIR=%%MPLAPACKDIR%%
CXXFLAGS= -I$(MPLAPACKDIR)/include -I$(MPLAPACKDIR)/include/mplapack -I$(MPLAPACKDIR)/include/qd
OPTFLAGS= -O2
LIBFLAGS=-L$(MPLAPACKDIR)/lib -Wl,--rpath=$(MPLAPACKDIR)/lib
MPFRLIBS=-lmpblas_mpfr -lmpfr -lmpc -lgmp
GMPLIBS=-lmpblas_gmp -lgmpxx -lgmp 
QDLIBS=-lmpblas_qd -lqd
DDLIBS=-lmpblas_dd -lqd
_FLOAT64xLIBS=-lmpblas__Float64x
_FLOAT128LIBS=-lmpblas__Float128%%LIBQUADMATH%%
DOUBLELIBS=-lmpblas_double
BLAS=
LAPACK=
FLIBS=

programs=Rgesv_mpfr Rgesv_gmp Rgesv_qd Rgesv_dd Rgesv__Float64x Rgesv__Float128 Rgesv_double

all: $(programs)

.cpp.o:
	$(CXX) -c $(OPTFLAGS) $(CXXFLAGS) $<

Rgesv_mpfr: Rgesv_mpfr.o
	$(CXX) -o Rgesv_mpfr Rgesv_mpfr.o $(LIBFLAGS) $(MPFRLIBS)

Rgesv_gmp: Rgesv_gmp.o
	$(CXX) -o Rgesv_gmp Rgesv_gmp.o $(LIBFLAGS) $(GMPLIBS)

Rgesv_qd: Rgesv_qd.o
	$(CXX) -o Rgesv_qd Rgesv_qd.o $(LIBFLAGS) $(QDLIBS)

Rgesv_dd: Rgesv_dd.o
	$(CXX) -o Rgesv_dd Rgesv_dd.o $(LIBFLAGS) $(DDLIBS)

Rgesv__Float64x: Rgesv__Float64x.o
	$(CXX) -o Rgesv__Float64x Rgesv__Float64x.o $(LIBFLAGS) $(_FLOAT64xLIBS)

Rgesv__Float128: Rgesv__Float128.o
	$(CXX) -o Rgesv__Float128 Rgesv__Float128.o $(LIBFLAGS) $(_FLOAT128LIBS)

Rgesv_double: Rgesv_double.o
	$(CXX) -o Rgesv_double Rgesv_double.o $(LIBFLAGS) $(DOUBLELIBS)

clean:
	rm -rf *.o *~ $(programs) *bak
